;*******************************************************
; InitReg                          Initializes Registers
;*******************************************************

%macro setreg 2
    mov edi,%1
    add edi,[regptr]
    mov eax,%2
    mov [edi],eax
%endmacro

;*******************************************************
; Registers     Note : Remember to restore AH, ECX, & DX
;*******************************************************

%macro checkmultchange 0
    ; execute multiplication
    cmp byte[multchange],0
    je .nomult
    push edx
    push eax
    xor bh,bh
    mov bl,[mode7B+1]
    mov ax,[mode7A]
    test bl,80h
    jz .noneg
    mov bh,0FFh
.noneg
    imul bx
    mov [compmult],ax
    mov [compmult+2],dl
    pop eax
    pop edx
    mov byte[multchange],0
.nomult
%endmacro

%macro mouse4016doxA 2
    cmp byte[JoyAPos],%1
    jne .nx7
    mov bx,[mousexpos]
    shr bx,%2
    and bx,1
    mov al,bl
.nx7
%endmacro

